{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "types": ["@types/node", "@types/jest"],
    "paths": {
      "@codemods/mods-utils/*": ["./packages/mods-utils/src/*"],
      "@codemods/mods-ts/*": ["./packages/mods-ts/src/*"],
      "@codemods/mods-vue/*": ["./packages/mods-vue/src/*"]
    }
  }
}
