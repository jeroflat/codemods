{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["dom", "es2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "exclude": ["**/__tests__/**/*", "**/__mocks__/**/*", "**/dist/**/*"]
}
